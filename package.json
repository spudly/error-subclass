{
  "name": "error-subclass",
  "version": "2.0.0",
  "description": "Extendable Error Class",
  "main": "umd.js",
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "nyc": "^6.6.1",
    "semistandard": "^8.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "test": "nyc --require babel-register mocha -u exports",
    "build": "browserify -t [ babelify --presets [ es2015 ] ] src/ErrorSubclass.js --standalone ErrorSubclass > umd.js",
    "lint": "jshint src && semistandard",
    "prepublish": "npm run build"
  },
  "jshintConfig": {
    "esnext": true
  },
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spudly/error-subclass.git"
  }
}
