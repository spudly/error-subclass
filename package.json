{
  "name": "error-subclass",
  "version": "1.0.2",
  "description": "Extendable Error Class",
  "main": "umd.js",
  "dependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "nyc": "^6.6.1",
    "semistandard": "^8.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "test": "nyc --require babel-register mocha -u exports",
    "build-umd": "browserify src/ErrorSubclass.js > umd.js --standalone ErrorSubclass",
    "build-es6": "cp src/ErrorSubclass.js es6.js",
    "build": "npm run build-umd && npm run build-es6",
    "lint": "jshint src && semistandard",
    "prepublish": "npm run build"
  },
  "jshintConfig": {
    "esnext": true
  },
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spudly/error-subclass.git"
  }
}
